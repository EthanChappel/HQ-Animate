{
    "id": "com.chappelastro.HQAnimate",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.9",
    "command": "hq-animate",
    "license": "LICENSE",
    "build-options": {
        "env": {
            "BASEAPP_REMOVE_WEBENGINE": "1"
        }
    },
    "finish-args": [
    "--filesystem=home",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
    ],
    "modules": [
        "python3-modules.json",
        {
            "name": "app",
            "buildsystem" : "simple",
            "build-commands" : [
                "python -m pip install --no-build-isolation --prefix=/app .",
                "install -Dm0644 com.chappelastro.HQAnimate.metainfo.xml ${FLATPAK_DEST}/share/metainfo/com.chappelastro.HQAnimate.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ]
}
