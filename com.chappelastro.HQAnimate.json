{
    "id": "com.chappelastro.HQAnimate",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.10",
    "command": "hq-animate",
    "license": "LICENSE",
    "build-options": {
        "env": {
            "BASEAPP_REMOVE_WEBENGINE": "1"
        }
    },
    "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
    ],
    "modules": [
        "python3-modules.json",
        {
            "name": "app",
            "buildsystem" : "simple",
            "build-commands" : [
                "python -m pip install --no-build-isolation --prefix=/app .",
                "install -Dm644 ./com.chappelastro.HQAnimate.desktop -t ${FLATPAK_DEST}/share/applications/",
                "install -Dm644 ./com.chappelastro.HQAnimate.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo/",
                "install -Dm644 ./icons/16x16/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/16x16/apps/",
                "install -Dm644 ./icons/24x24/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/24x24/apps/",
                "install -Dm644 ./icons/32x32/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/32x32/apps/",
                "install -Dm644 ./icons/48x48/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/48x48/apps/",
                "install -Dm644 ./icons/64x64/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/64x64/apps/",
                "install -Dm644 ./icons/128x128/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/128x128/apps/",
                "install -Dm644 ./icons/256x256/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/256x256/apps/",
                "install -Dm644 ./icons/512x512/com.chappelastro.HQAnimate.png -t ${FLATPAK_DEST}/share/icons/hicolor/512x512/apps/",
                "install -Dm644 ./icons/scalable/com.chappelastro.HQAnimate.svg -t ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ]
}
